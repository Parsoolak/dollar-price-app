<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pushapp">

    <!-- Required permission to access the internet. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission to keep CPU awake while processing background work. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/common_google_signin_btn_icon_light"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.PushApp">

        <!-- Main activity (empty, as work is mostly in background). -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Firebase messaging service declaration. -->
<!--        <service-->
<!--            android:name=".MyFirebaseMessagingService"-->
<!--            android:exported="false">-->
<!--            <intent-filter>-->
<!--                <action android:name="com.google.firebase.MESSAGING_EVENT" />-->
<!--            </intent-filter>-->
<!--        </service>-->

        <!-- Debug broadcast receiver used to simulate FCM data notifications via ADB. -->
        <receiver
            android:name=".DebugBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.pushapp.DEBUG_NOTIFICATION" />
            </intent-filter>
        </receiver>

    </application>

</manifest>